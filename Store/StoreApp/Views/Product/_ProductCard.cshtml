@model Product

<div class="col-md-4 my-2">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/images/default.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"> @Model.ProductName</h5>
            <p class="card-text">@Model.Price.ToString("c")</p>
            <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
                <i class="fa-solid fa-arrow-right"></i>
                Get Details</a>
        </div>
    </div>
</div>
