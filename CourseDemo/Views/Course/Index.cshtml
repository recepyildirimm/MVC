@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h4 class="display-6">
        Applications
    </h4>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Apply At</th>
                <th>Selected Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Candidate item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.ApplyAt</td>
                    <td>@item.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info">
        There is no application.Please click <a asp-action="Apply">Here</a> to apply.
    </div>
}